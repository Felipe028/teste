{{#each erros}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>{{texto}}</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
<div class="card" style="width: 30rem; margin:0 auto;">
  <div class="card-header text-white bg-success">
    Editar categoria
  </div>
  <div class="card-body">
    <form  action="salvar" method="POST">
      <div class="form-group">
        <input type="hidden" id="id" name="id" value="{{categoria._id}}" placeholder="Nome da categoria">
        <label for="nome"> Nome: </label>
        <input type="text" class="form-control" id="nome" name="nome" value="{{categoria.nome}}" placeholder="Nome da categoria">
      </div>
      <div class="form-group">
        <label for="slug"> Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" value="{{categoria.slug}}" placeholder="Slug da categoria">
      </div>
      <button type="submit" class="btn btn-success">Editar</button>
    </form>
  </div>
</div>
